{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "baseUrl": ".",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "paths": {
      "@components/*": [
        "./Framework/components/*"
      ],
      "@settings": [
        "./settings"
      ],
      "@context/*": [
        "./Framework/context/*"
      ],
      "@props/*": [
        "./Framework/props/*"
      ],
      "@app_types/*": [
        "./Framework/types/*"
      ],
      "@config/*": [
        "./Framework/config/*"
      ],
      "@routes": [
        "./routes"
      ]
    }
  },
  "exclude": [
    "dist",
    ".next",
    "out",
    "next.config.js"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
